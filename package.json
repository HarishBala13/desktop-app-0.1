{
  "name": "desktop-app-0.1",
  "version": "0.0.0",
  "main": "dist/index.js",
  "description": "Desktop application that serves as a tool to communicate with Arduino",
  "author": {
    "name": "Harish B",
    "email": "harish@gmail.com"
  },
  "scripts": {
    "ng": "ng",
    "build-desktop-app-0.1": "ng build",
    "build-electron": "tsc --project projects/electron/tsconfig.json",
    "watch-desktop-app-0.1": "ng build --watch --configuration development",
    "wait-for-desktop-app-0.1": "wait-on http://localhost:4200",
    "serve-desktop-app-0.1": "ng serve desktop-app-0.1",
    "start": "concurrently \"npm run build-electron\" \"npm run serve-desktop-app-0.1\" \"npm run wait-for-desktop-app-0.1 && electron-forge start\"",
    "package": "npm run  build-electron && npm run build-desktop-app-0.1 && electron-forge package",
    "make": "npm run  build-electron && npm run build-desktop-app-0.1 && electron-forge make",
    "publish-app": "npm run  build-electron && npm run build-desktop-app-0.1 && electron-forge publish",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:desktop-app-0.1": "node dist/desktop-app-0.1/server/server.mjs"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.2.0",
    "@angular/common": "^18.2.0",
    "@angular/compiler": "^18.2.0",
    "@angular/core": "^18.2.0",
    "@angular/forms": "^18.2.0",
    "@angular/platform-browser": "^18.2.0",
    "@angular/platform-browser-dynamic": "^18.2.0",
    "@angular/platform-server": "^18.2.0",
    "@angular/router": "^18.2.0",
    "@angular/ssr": "^18.2.9",
    "electron-squirrel-startup": "^1.0.1",
    "express": "^4.18.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.9",
    "@angular/cli": "^18.2.9",
    "@angular/compiler-cli": "^18.2.0",
    "@electron-forge/cli": "^7.5.0",
    "@electron-forge/maker-deb": "^7.5.0",
    "@electron-forge/maker-rpm": "^7.5.0",
    "@electron-forge/maker-squirrel": "^7.5.0",
    "@electron-forge/maker-zip": "^7.5.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.5.0",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "concurrently": "^9.0.1",
    "electron": "^33.0.1",
    "jasmine-core": "~5.2.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.5.2",
    "wait-on": "^8.0.1"
  }
}
