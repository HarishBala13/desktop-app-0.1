{
    "compilerOptions": {
        "target": "ES6",
        "allowJs": true,
        "module": "CommonJS",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "../../dist",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}